- content_for(:header) do
  .box-image{id:'box-image', style:'position:relative'}
    %div{style:'height:160px'}
    .container.main
      .row
        .col-md-10.col-md-offset-1.text-center
          %p.title
            New Project? Start here:
      .row
        .col-md-4
          .main-item.sp-effect3
            %a{href:'#enterprise'}
              %i.fa.fa-university
              .subtitle
                Enterprise Applications

        .col-md-4
          .main-item.sp-effect3
            %a{href:'#programming'}
              %i.fa.fa-cogs
              .subtitle
                Programming Platforms

        .col-md-4
          .main-item.sp-effect3
            %a{href:'#development'}
              %i.fa.fa-connectdevelop
              .subtitle
                Development Tools

%wrapper
  %section{id:'enterprise'}
    .container
      .section-heading.scrollpoint.sp-effect3.active.animated.fadeInDown
        %h1
          Enterprise Applications
        .divider
        .row
          %div{'ng-controller' => 'EAController'}
            .row
              .col-md-12
                %ol.breadcrumb{style:'margin-bottom:2px'}
                  %li{'ng-repeat' => 'parent in parents'}
                    %button.btn.btn-link{'ng-click' => 'seeChildren(parent)'}
                      {{parent.name}}
                .well
                  .row
                    .col-md-4{'ng-repeat' => 'category in categories'}
                      %button.btn.btn-link{'ng-click' => 'seeChildren(category)'}
                        {{category.name}}

  %section{id:'programming'}
    .container
      .section-heading.scrollpoint.sp-effect3.active.animated.fadeInDown
        %h1
          Programming Platforms
        .divider
        %p The table and info will be here
        %p space
        %p space
        %p space
